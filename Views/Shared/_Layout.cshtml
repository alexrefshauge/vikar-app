<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vikarapp</title>
    <script src="https://kit.fontawesome.com/9df18aaffa.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

@{ 
    string loginEmail = null;

    HttpCookie cookie = Request.Cookies.Get("Email");
    if (cookie != null)
    {
        loginEmail = cookie.Value;
    }
}

<body>
    <div class="navbar">
        <div class="nav">
            <a href="/">
                Vikarapp
            </a>
            @if(true) {
            <p class="nav-user-email">
                @loginEmail
            </p>
            }
            <ul>
                <li>
                    Hjem
                </li>

            </ul>
        </div>
    </div>
    
    <div class="body-container">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)


        <div class="footer-container">
